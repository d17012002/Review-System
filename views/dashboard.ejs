        </div>
        <div class="chat-container">
          <div class="chat-container-content">
            <div id="chat" class="chat-content">
            
                <div>
                    
                 <% for(var i=key.length - 1; i>=0; i--) { %>
                        
                  <hr>
                  <div class="profile-icon"><i class="fas fa-user-circle"></i> <%= key[i].name %><code>posted this query</code></div>
                  <% if(i===key.length - 1) { %>
                    <details open>
                  <% }else{ %>
                    <details>
                  <% } %>
                    <summary>
                     <%= key[i].query %>
                    </summary>
                    <div>
                     <% for(var j=key[i].replies.length - 1; j>=0; j--) { %>

                        <span>
                          â€“ <%= key[i].replies[j] %>  <br>
                        </span>

                      <% } %>
                      
                      <form action="" method="post">
                        <input autocomplete="off" name="reply" class="reply" placeholder="Drop your reply..." type="text">
                        <button name="submit_reply" value="<%= key[i].query %>"  type="submit">Reply</button>
                      </form>
                      </div>
                  </details>

                 <% } %>

                </div>
            </div>
            <form autocomplete="off" method="post" class="chat-footer">
              <input
                type="text"
                class="form-control mr-2"
                placeholder="Enter your query message..."
                v-model="message"
                name="newQuery"
                required
              />
              <button name="submit_btn" value="QuerySubmission" type="submit" class="btn btn-primary">Post</button>
